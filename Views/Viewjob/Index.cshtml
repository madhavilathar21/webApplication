@model IEnumerable<WebApplication6.Post_Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/_LayoutPage1.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comapany_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job_Descripation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requirements)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact_Info)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Require_Qualification)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comapany_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Job_Descripation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Requirements)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact_Info)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Require_Qualification)
        </td>
       
    </tr>
}

</table>

@using (Html.BeginForm("Apply", "Viewjob", FormMethod.Post))
{
<input type="submit" id="Apply" name="Apply" value="Apply" />
}
@using (Html.BeginForm("Next", "Viewjob", FormMethod.Post))
{
    <input type="submit" id="Next" name="Next" value="Next" />
}
